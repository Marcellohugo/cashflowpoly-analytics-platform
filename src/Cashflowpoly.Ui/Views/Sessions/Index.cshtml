@model Cashflowpoly.Ui.Models.SessionListViewModel

@{
    ViewData["Title"] = Context.T("nav.sessions");
    var isInstructor = Context.Session.IsInstructor();
}

<section class="section-shell w-full">
    <div class="page-intro">
        <div class="page-intro-main">
            <p class="eyebrow">@(isInstructor ? Context.T("sessions.management") : "Sesi Player")</p>
            <h1 class="headline">@(isInstructor ? Context.T("sessions.title") : "Daftar sesi saya")</h1>
            <p class="subhead">@(isInstructor
                ? Context.T("sessions.subtitle")
                : "Lihat sesi yang kamu ikuti dan buka detail progres permainanmu.")</p>
        </div>
        <div class="page-intro-actions">
            <div class="badge @(isInstructor ? "badge-amber" : "badge-emerald")">@(isInstructor ? Context.T("sessions.live_log") : "Read-only")</div>
        </div>
    </div>

    <div class="mt-6 session-stats-grid">
        <div class="stat-card session-total-card">
            <p class="text-xs uppercase text-slate-500">@(isInstructor ? "Total Sessions" : "Sesi Saya")</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.Items.Count</p>
        </div>
        <div class="stat-card">
            <p class="text-xs uppercase text-slate-500">Started</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.Items.Count(x => string.Equals(x.Status, "STARTED", StringComparison.OrdinalIgnoreCase))</p>
        </div>
        <div class="stat-card">
            <p class="text-xs uppercase text-slate-500">Ended</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.Items.Count(x => string.Equals(x.Status, "ENDED", StringComparison.OrdinalIgnoreCase))</p>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="mt-4 alert alert-error" aria-live="polite">
            @Model.ErrorMessage
        </div>
    }

    <details class="mt-4 data-toggle">
        <summary>@(isInstructor ? "Tips penggunaan menu Sesi" : "Tips membaca sesi untuk player")</summary>
        <div class="mt-3 metric-panel">
            <div class="metric-list">
                @if (isInstructor)
                {
                    <div class="metric-row"><span class="metric-key">Langkah 1</span><span class="metric-value">Pilih sesi pada kolom detail.</span></div>
                    <div class="metric-row"><span class="metric-key">Langkah 2</span><span class="metric-value">Aktifkan ruleset pada halaman detail sesi (instruktur).</span></div>
                    <div class="metric-row"><span class="metric-key">Langkah 3</span><span class="metric-value">Masuk ke detail pemain untuk evaluasi metrik individual.</span></div>
                }
                else
                {
                    <div class="metric-row"><span class="metric-key">Langkah 1</span><span class="metric-value">Pilih sesi yang ingin ditinjau.</span></div>
                    <div class="metric-row"><span class="metric-key">Langkah 2</span><span class="metric-value">Buka detail sesi untuk melihat ringkasan performa pribadimu.</span></div>
                    <div class="metric-row"><span class="metric-key">Langkah 3</span><span class="metric-value">Cek timeline event agar keputusan per turn lebih mudah dievaluasi.</span></div>
                }
            </div>
        </div>
    </details>

    <div class="mt-6 table-wrap">
        <table class="w-full text-left text-sm">
            <thead class="table-head">
                <tr>
                    <th class="px-4 py-3">@Context.T("common.name")</th>
                    <th class="px-4 py-3">@Context.T("common.mode")</th>
                    <th class="px-4 py-3">@Context.T("common.status")</th>
                    <th class="px-4 py-3">@Context.T("common.created")</th>
                    <th class="px-4 py-3 text-right">@Context.T("common.action")</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Items.Count == 0)
            {
                <tr>
                    <td class="px-4 py-4 text-slate-500" colspan="5">@Context.T("state.no_sessions")</td>
                </tr>
            }
            else
            {
                foreach (var item in Model.Items)
                {
                    <tr class="border-t border-slate-200">
                        <td class="px-4 py-3 font-medium text-slate-900">@item.SessionName</td>
                        <td class="px-4 py-3 text-slate-600">@item.Mode</td>
                        <td class="px-4 py-3 text-slate-600">
                            @{
                                var statusClass = string.Equals(item.Status, "STARTED", StringComparison.OrdinalIgnoreCase)
                                    ? "status-active"
                                    : string.Equals(item.Status, "CREATED", StringComparison.OrdinalIgnoreCase)
                                        ? "status-draft"
                                        : "status-retired";
                            }
                            <span class="status-pill @statusClass">@item.Status</span>
                        </td>
                        <td class="px-4 py-3 text-slate-600">@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="px-4 py-3 text-right">
                            <a class="table-link"
                               asp-controller="Sessions" asp-action="Details" asp-route-sessionId="@item.SessionId">@(isInstructor ? Context.T("common.detail") : "Lihat progres")</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</section>
