@model Cashflowpoly.Ui.Models.SessionDetailViewModel
@using System.Text.Json

@{
    ViewData["Title"] = Context.T("sessions.detail_title");
    var isInstructor = Context.Session.IsInstructor();
    var playerDisplayNames = Model.PlayerDisplayNames;
    var fallbackPlayerNames = new Dictionary<Guid, string>();
    var fallbackPlayerIndex = 1;
    var knownPlayerIds = (Model.Analytics?.ByPlayer.Select(item => item.PlayerId) ?? Enumerable.Empty<Guid>())
        .Concat(Model.Timeline.Where(item => item.PlayerId.HasValue).Select(item => item.PlayerId!.Value))
        .Distinct()
        .ToList();

    foreach (var playerId in knownPlayerIds)
    {
        if (playerDisplayNames.TryGetValue(playerId, out var displayName) && !string.IsNullOrWhiteSpace(displayName))
        {
            continue;
        }

        fallbackPlayerNames[playerId] = $"{Context.T("common.player")} {fallbackPlayerIndex}";
        fallbackPlayerIndex++;
    }

    string ResolvePlayerName(Guid playerId)
    {
        if (playerDisplayNames.TryGetValue(playerId, out var displayName) && !string.IsNullOrWhiteSpace(displayName))
        {
            return displayName;
        }

        if (fallbackPlayerNames.TryGetValue(playerId, out var fallbackName))
        {
            return fallbackName;
        }

        return Context.T("common.player");
    }

    string ResolveActorLabel(Cashflowpoly.Ui.Models.SessionTimelineEventViewModel item)
    {
        if (string.Equals(item.ActorType, "PLAYER", StringComparison.OrdinalIgnoreCase))
        {
            if (!string.IsNullOrWhiteSpace(item.PlayerDisplayName))
            {
                return item.PlayerDisplayName;
            }

            if (item.PlayerId.HasValue)
            {
                return ResolvePlayerName(item.PlayerId.Value);
            }

            return Context.T("sessions.actor.player");
        }

        if (string.Equals(item.ActorType, "SYSTEM", StringComparison.OrdinalIgnoreCase))
        {
            return Context.T("sessions.actor.system");
        }

        if (string.Equals(item.ActorType, "INSTRUCTOR", StringComparison.OrdinalIgnoreCase))
        {
            return Context.T("sessions.actor.instructor");
        }

        return Context.T("sessions.actor.other");
    }
}

<section class="section-shell">
    <div class="ruleset-hero">
        <div>
            <p class="eyebrow text-emerald-700">@Context.T("sessions.analytics_title")</p>
            <h1 class="headline">@Context.T("sessions.detail_title")</h1>
            <p class="mt-2 text-xs text-slate-500 font-mono">@Model.SessionId</p>
        </div>
        <div class="ruleset-hero-meta">
            @if (!string.IsNullOrWhiteSpace(Model.SessionStatus))
            {
                var sessionStatusClass = string.Equals(Model.SessionStatus, "STARTED", StringComparison.OrdinalIgnoreCase)
                    ? "status-active"
                    : string.Equals(Model.SessionStatus, "CREATED", StringComparison.OrdinalIgnoreCase)
                        ? "status-draft"
                        : "status-retired";
                <span class="status-pill @sessionStatusClass">@Model.SessionStatus</span>
            }
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="mt-4 alert alert-error" aria-live="polite">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.Analytics is not null)
    {
        var winner = Model.Analytics.ByPlayer
            .OrderByDescending(item => item.CashInTotal - item.CashOutTotal)
            .ThenByDescending(item => item.HappinessPointsTotal)
            .FirstOrDefault();
        var winnerNetCashflow = winner is null ? 0 : winner.CashInTotal - winner.CashOutTotal;

        <div class="mt-6 grid gap-4 md:grid-cols-5">
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.total_event")</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.Analytics.Summary.EventCount</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.cash_in")</p>
                <p class="mt-2 text-2xl font-semibold text-emerald-700">@Model.Analytics.Summary.CashInTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.cash_out")</p>
                <p class="mt-2 text-2xl font-semibold text-rose-700">@Model.Analytics.Summary.CashOutTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.net_cashflow")</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.Analytics.Summary.CashflowNetTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.violations")</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.Analytics.Summary.RulesViolationsCount</p>
            </div>
        </div>

        @if (winner is not null)
        {
            <div class="mt-6 winner-card">
                <div class="winner-card-icon" aria-hidden="true">
                    <svg viewBox="0 0 120 120" role="presentation">
                        <circle cx="60" cy="60" r="52" fill="#fff4c2" />
                        <path d="M40 25h40v18c0 11-9 20-20 20s-20-9-20-20V25z" fill="#f59e0b" />
                        <path d="M45 63h30v12H45z" fill="#12a89a" />
                        <path d="M42 75h36v14H42z" fill="#0d857a" />
                        <circle cx="60" cy="43" r="9" fill="#fff" />
                        <circle cx="56" cy="41" r="2" fill="#1f3f5a" />
                        <circle cx="64" cy="41" r="2" fill="#1f3f5a" />
                        <path d="M54 48c2 3 4 4 6 4s4-1 6-4" fill="none" stroke="#1f3f5a" stroke-width="2.5" stroke-linecap="round" />
                    </svg>
                </div>
                <div>
                    <p class="eyebrow">@Context.T("sessions.winner.title")</p>
                    <h2 class="text-2xl font-semibold text-slate-900">@Context.T("sessions.winner.subtitle")</h2>
                    <p class="mt-2 text-sm font-semibold text-slate-700">@ResolvePlayerName(winner.PlayerId)</p>
                    <div class="winner-meta mt-3">
                        <span>@Context.T("sessions.winner.net"): @winnerNetCashflow</span>
                        <span>@Context.T("sessions.winner.happiness"): @winner.HappinessPointsTotal</span>
                        <span>@Context.T("sessions.winner.cash_in"): @winner.CashInTotal</span>
                    </div>
                </div>
            </div>
        }

        @if (isInstructor)
        {
            <div class="mt-6 action-toolbar">
                <a class="btn-ghost"
                   asp-controller="Sessions" asp-action="Ruleset" asp-route-sessionId="@Model.SessionId">@Context.T("sessions.activate_ruleset")</a>
                @if (Model.IsDevelopment && string.Equals(Model.SessionStatus, "STARTED", System.StringComparison.OrdinalIgnoreCase))
                {
                    <form asp-controller="Sessions" asp-action="End" asp-route-sessionId="@Model.SessionId" method="post">
                        @Html.AntiForgeryToken()
                        <button class="btn-ghost" type="submit">@Context.T("sessions.end_dev")</button>
                    </form>
                }
            </div>
        }

        <div class="mt-8 table-wrap">
            <table class="w-full text-left text-sm mobile-card-table">
                <thead class="table-head">
                    <tr>
                        <th class="px-4 py-3">@Context.T("common.name")</th>
                        <th class="px-4 py-3 text-right">@Context.T("metric.cash_in")</th>
                        <th class="px-4 py-3 text-right">@Context.T("metric.cash_out")</th>
                        <th class="px-4 py-3 text-right">@Context.T("metric.donation")</th>
                        <th class="px-4 py-3 text-right">@Context.T("metric.gold_qty")</th>
                        <th class="px-4 py-3 text-right">@Context.T("metric.happiness")</th>
                        <th class="px-4 py-3 text-right">@Context.T("common.detail")</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Analytics.ByPlayer.Count == 0)
                {
                    <tr>
                        <td class="px-4 py-4 text-slate-500 mobile-card-empty" colspan="7">@Context.T("state.no_player_data")</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.Analytics.ByPlayer)
                    {
                        var winnerRowClass = winner is not null && item.PlayerId == winner.PlayerId
                            ? "winner-row"
                            : string.Empty;
                        <tr class="border-t border-slate-200 @winnerRowClass">
                            <td class="px-4 py-3 text-slate-700" data-label="@Context.T("common.name")">@ResolvePlayerName(item.PlayerId)</td>
                            <td class="px-4 py-3 text-right" data-label="@Context.T("metric.cash_in")">@item.CashInTotal</td>
                            <td class="px-4 py-3 text-right" data-label="@Context.T("metric.cash_out")">@item.CashOutTotal</td>
                            <td class="px-4 py-3 text-right" data-label="@Context.T("metric.donation")">@item.DonationTotal</td>
                            <td class="px-4 py-3 text-right" data-label="@Context.T("metric.gold_qty")">@item.GoldQty</td>
                            <td class="px-4 py-3 text-right" data-label="@Context.T("metric.happiness")">@item.HappinessPointsTotal</td>
                            <td class="px-4 py-3 text-right" data-label="@Context.T("common.detail")">
                                <a class="table-link"
                                   asp-controller="Players" asp-action="Details" asp-route-sessionId="@Model.SessionId"
                                   asp-route-playerId="@item.PlayerId">@Context.T("common.view")</a>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>

        <div class="mt-8">
            <div class="page-intro">
                <div class="page-intro-main">
                    <p class="eyebrow">@Context.T("sessions.timeline")</p>
                    <h2 class="headline text-2xl">@Context.T("sessions.timeline_title")</h2>
                    <p class="subhead">@Context.T("sessions.timeline_subtitle")</p>
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.TimelineErrorMessage))
            {
                <div class="mt-4 alert alert-warning" aria-live="polite">
                    @Model.TimelineErrorMessage
                </div>
            }

            @if (Model.Timeline.Count > 0)
            {
                <div class="mt-4 chart-grid">
                    <article class="chart-card md:col-span-2">
                        <h3 class="chart-title">@Context.T("sessions.timeline_chart_progress")</h3>
                        <canvas id="sessionTimelineProgressChart" height="120"></canvas>
                    </article>
                    <article class="chart-card md:col-span-2">
                        <h3 class="chart-title">@Context.T("sessions.timeline_chart_actor")</h3>
                        <canvas id="sessionTimelineActorChart" height="120"></canvas>
                    </article>
                </div>
                <div class="mt-4">
                    <p class="text-sm text-slate-600">@Context.T("sessions.timeline_actor_help")</p>
                    <div class="mt-3 grid gap-3 md:grid-cols-2 xl:grid-cols-4">
                        <article class="metric-panel">
                            <h3>@Context.T("sessions.actor.player")</h3>
                            <p class="text-sm text-slate-600">@Context.T("sessions.actor.player.desc")</p>
                        </article>
                        <article class="metric-panel">
                            <h3>@Context.T("sessions.actor.system")</h3>
                            <p class="text-sm text-slate-600">@Context.T("sessions.actor.system.desc")</p>
                        </article>
                        <article class="metric-panel">
                            <h3>@Context.T("sessions.actor.instructor")</h3>
                            <p class="text-sm text-slate-600">@Context.T("sessions.actor.instructor.desc")</p>
                        </article>
                        <article class="metric-panel">
                            <h3>@Context.T("sessions.actor.other")</h3>
                            <p class="text-sm text-slate-600">@Context.T("sessions.actor.other.desc")</p>
                        </article>
                    </div>
                </div>
            }

            <div class="mt-4 table-wrap">
                <table class="w-full text-left text-sm mobile-card-table">
                    <thead class="table-head">
                        <tr>
                            <th class="px-4 py-3">@Context.T("common.time")</th>
                            <th class="px-4 py-3 text-right">@Context.T("sessions.timeline_seq")</th>
                            <th class="px-4 py-3">@Context.T("sessions.timeline_day_turn")</th>
                            <th class="px-4 py-3">@Context.T("sessions.timeline_actor")</th>
                            <th class="px-4 py-3">@Context.T("sessions.timeline_flow")</th>
                            <th class="px-4 py-3">@Context.T("sessions.timeline_description")</th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (Model.Timeline.Count == 0)
                    {
                        <tr>
                            <td class="px-4 py-4 text-slate-500 mobile-card-empty" colspan="6">@Context.T("sessions.timeline_empty")</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model.Timeline)
                        {
                            var actorLabel = ResolveActorLabel(item);

                            <tr class="border-t border-slate-200 align-top">
                                <td class="px-4 py-3 text-slate-600" data-label="@Context.T("common.time")">@item.Timestamp.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td class="px-4 py-3 text-right text-slate-600" data-label="@Context.T("sessions.timeline_seq")">@item.SequenceNumber</td>
                                <td class="px-4 py-3 text-slate-600" data-label="@Context.T("sessions.timeline_day_turn")">Hari @(item.DayIndex + 1) | @item.Weekday | Turn @item.TurnNumber</td>
                                <td class="px-4 py-3 text-slate-600" data-label="@Context.T("sessions.timeline_actor")">
                                    <div>@actorLabel</div>
                                </td>
                                <td class="px-4 py-3" data-label="@Context.T("sessions.timeline_flow")">
                                    <div class="font-semibold text-slate-800">@item.FlowLabel</div>
                                    <div class="mt-1 text-xs text-slate-500 font-mono">@item.ActionType</div>
                                </td>
                                <td class="px-4 py-3 text-slate-600" data-label="@Context.T("sessions.timeline_description")">@item.FlowDescription</td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
</section>

@section Scripts {
    @if (Model.Timeline.Count > 0)
    {
        <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.6/dist/chart.umd.min.js"></script>
        <script>
            (() => {
                if (typeof Chart === "undefined") {
                    return;
                }

                const timeline = @Html.Raw(JsonSerializer.Serialize(Model.Timeline));
                if (!Array.isArray(timeline) || timeline.length === 0) {
                    return;
                }
                const cumulativeEventsLabel = @Html.Raw(JsonSerializer.Serialize(Context.T("sessions.timeline_chart_cumulative_events")));
                const eventSequenceLabel = @Html.Raw(JsonSerializer.Serialize(Context.T("sessions.timeline_chart_event_sequence")));
                const cumulativeCountLabel = @Html.Raw(JsonSerializer.Serialize(Context.T("sessions.timeline_chart_event_count")));
                const turnNumberLabel = @Html.Raw(JsonSerializer.Serialize(Context.T("sessions.timeline_chart_turn_number")));
                const eventsPerTurnLabel = @Html.Raw(JsonSerializer.Serialize(Context.T("sessions.timeline_chart_events_per_turn")));
                const actorLabels = {
                    PLAYER: @Html.Raw(JsonSerializer.Serialize(Context.T("sessions.actor.player"))),
                    SYSTEM: @Html.Raw(JsonSerializer.Serialize(Context.T("sessions.actor.system"))),
                    INSTRUCTOR: @Html.Raw(JsonSerializer.Serialize(Context.T("sessions.actor.instructor"))),
                    OTHER: @Html.Raw(JsonSerializer.Serialize(Context.T("sessions.actor.other")))
                };
                const formatTimestamp = (iso) => {
                    const dt = new Date(iso);
                    return Number.isNaN(dt.getTime()) ? iso : dt.toLocaleTimeString("id-ID", { hour: "2-digit", minute: "2-digit", second: "2-digit" });
                };
                const resolveActorBucket = (actorType) => {
                    const normalized = `${actorType ?? ""}`.toUpperCase();
                    return normalized === "PLAYER" || normalized === "SYSTEM" || normalized === "INSTRUCTOR"
                        ? normalized
                        : "OTHER";
                };
                const resolveActorLabel = (item) => {
                    const bucket = resolveActorBucket(item.ActorType);
                    if (bucket === "PLAYER" && item.PlayerDisplayName) {
                        return `${actorLabels.PLAYER}: ${item.PlayerDisplayName}`;
                    }

                    return actorLabels[bucket];
                };

                const sorted = [...timeline].sort((a, b) => {
                    const ta = new Date(a.Timestamp).getTime();
                    const tb = new Date(b.Timestamp).getTime();
                    if (ta !== tb) {
                        return ta - tb;
                    }
                    return (a.SequenceNumber ?? 0) - (b.SequenceNumber ?? 0);
                });

                const progressLabels = sorted.map((item) => `#${item.SequenceNumber}`);
                const progressData = sorted.map((item, index) => ({
                    y: index + 1,
                    seq: item.SequenceNumber,
                    action: item.ActionType,
                    actor: resolveActorLabel(item),
                    timestamp: item.Timestamp
                }));

                const progressCanvas = document.getElementById("sessionTimelineProgressChart");
                if (progressCanvas) {
                    new Chart(progressCanvas, {
                        type: "line",
                        data: {
                            labels: progressLabels,
                            datasets: [{
                                label: cumulativeEventsLabel,
                                data: progressData.map((item) => item.y),
                                borderColor: "#2d7dd2",
                                backgroundColor: "rgba(45, 125, 210, 0.14)",
                                pointRadius: 3.2,
                                pointHoverRadius: 5,
                                borderWidth: 2,
                                fill: true,
                                tension: 0,
                                stepped: true
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: true,
                            aspectRatio: 2.25,
                            scales: {
                                x: {
                                    title: {
                                        display: true,
                                        text: eventSequenceLabel
                                    }
                                },
                                y: {
                                    beginAtZero: true,
                                    title: {
                                        display: true,
                                        text: cumulativeCountLabel
                                    }
                                }
                            },
                            plugins: {
                                legend: { display: false },
                                tooltip: {
                                    callbacks: {
                                        title: (items) => {
                                            const index = items[0].dataIndex;
                                            const raw = progressData[index];
                                            return `${progressLabels[index]} | ${formatTimestamp(raw.timestamp)}`;
                                        },
                                        label: (ctx) => {
                                            const raw = progressData[ctx.dataIndex];
                                            return `Event ke-${raw.y} | ${raw.actor} | ${raw.action}`;
                                        }
                                    }
                                }
                            }
                        }
                    });
                }

                const turnNumbers = [...new Set(sorted.map((item) => Number(item.TurnNumber ?? 0)))]
                    .sort((a, b) => a - b);
                const actorBuckets = {
                    PLAYER: new Map(),
                    SYSTEM: new Map(),
                    INSTRUCTOR: new Map(),
                    OTHER: new Map()
                };

                sorted.forEach((item) => {
                    const bucket = resolveActorBucket(item.ActorType);
                    const turn = Number(item.TurnNumber ?? 0);
                    const current = actorBuckets[bucket].get(turn) ?? 0;
                    actorBuckets[bucket].set(turn, current + 1);
                });

                const actorCanvas = document.getElementById("sessionTimelineActorChart");
                if (actorCanvas) {
                    new Chart(actorCanvas, {
                        type: "bar",
                        data: {
                            labels: turnNumbers.map((turn) => `T${turn}`),
                            datasets: [
                                {
                                    label: actorLabels.PLAYER,
                                    data: turnNumbers.map((turn) => actorBuckets.PLAYER.get(turn) ?? 0),
                                    backgroundColor: "#1ba784"
                                },
                                {
                                    label: actorLabels.SYSTEM,
                                    data: turnNumbers.map((turn) => actorBuckets.SYSTEM.get(turn) ?? 0),
                                    backgroundColor: "#f39c12"
                                },
                                {
                                    label: actorLabels.INSTRUCTOR,
                                    data: turnNumbers.map((turn) => actorBuckets.INSTRUCTOR.get(turn) ?? 0),
                                    backgroundColor: "#ef4e4e"
                                },
                                {
                                    label: actorLabels.OTHER,
                                    data: turnNumbers.map((turn) => actorBuckets.OTHER.get(turn) ?? 0),
                                    backgroundColor: "#6b7280"
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: true,
                            aspectRatio: 2.25,
                            scales: {
                                x: {
                                    stacked: true,
                                    title: {
                                        display: true,
                                        text: turnNumberLabel
                                    }
                                },
                                y: {
                                    beginAtZero: true,
                                    stacked: true,
                                    title: {
                                        display: true,
                                        text: eventsPerTurnLabel
                                    },
                                    ticks: {
                                        stepSize: 1
                                    }
                                }
                            },
                            plugins: {
                                legend: { display: true },
                                tooltip: {
                                    callbacks: {
                                        title: (items) => `Turn ${turnNumbers[items[0].dataIndex]}`,
                                        label: (item) => `${item.dataset.label}: ${item.parsed.y} event`
                                    }
                                }
                            }
                        }
                    });
                }
            })();
        </script>
    }
}
