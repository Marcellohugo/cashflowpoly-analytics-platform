@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<section class="section-shell">
    <div class="page-intro">
        <div class="page-intro-main">
            <p class="eyebrow text-rose-700">System Notice</p>
            <h1 class="headline">Terjadi kesalahan saat memproses permintaan.</h1>
            <p class="subhead">Silakan coba lagi, atau cek detail request bila masalah berlanjut.</p>
        </div>
    </div>

    @if (Model.ShowRequestId)
    {
        <div class="mt-4 alert alert-info">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </div>
    }
</section>

<section class="section-shell mt-6">
    <h2 class="headline text-2xl">Development Mode</h2>
    <p class="subhead">
        Mode <strong>Development</strong> menampilkan detail error untuk debugging lokal.
    </p>
    <p class="mt-2 text-sm text-slate-600">
        Jangan aktifkan Development di produksi karena bisa mengekspos informasi sensitif.
        Untuk debugging lokal, set <strong>ASPNETCORE_ENVIRONMENT</strong> ke <strong>Development</strong>.
    </p>
</section>