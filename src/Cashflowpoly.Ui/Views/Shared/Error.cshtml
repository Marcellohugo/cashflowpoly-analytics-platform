@* Fungsi file: Merender tampilan Razor untuk bagian Shared/Error.cshtml beserta interaksi presentasinya. *@
@model ErrorViewModel
@{
    ViewData["Title"] = Context.T("error.title");
}

<section class="section-shell">
    <div class="page-intro">
        <div class="page-intro-main">
            <p class="eyebrow text-rose-700">@Context.T("error.notice")</p>
            <h1 class="headline">@Context.T("error.message")</h1>
            <p class="subhead">@Context.T("error.submessage")</p>
        </div>
    </div>

    @if (Model.ShowRequestId)
    {
        <div class="mt-4 alert alert-info">
            <strong>@Context.T("error.request_id"):</strong> <code>@Model.RequestId</code>
        </div>
    }
</section>

<section class="section-shell mt-6">
    <h2 class="headline text-2xl">@Context.T("error.dev_mode")</h2>
    <p class="subhead">
        @Context.T("error.dev_desc")
    </p>
    <p class="mt-2 text-sm text-slate-600">
        @Context.T("error.dev_warning")
        @Context.T("error.dev_hint")
    </p>
</section>
