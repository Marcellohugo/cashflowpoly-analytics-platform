<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cashflowpoly.Ui</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cashflowpoly.Ui.styles.css" asp-append-version="true" />
</head>
<body>
    <a class="skip-link" href="#content">Skip to content</a>
    <header class="sticky top-0 z-30 border-b border-white/60 bg-white/70 backdrop-blur">
        <nav class="nav-shell">
            <a class="flex items-center gap-3 text-lg font-semibold text-slate-900" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="brand-mark">CF</span>
                <div class="leading-tight">
                    <span class="block tracking-wide">Cashflowpoly</span>
                    <span class="brand-chip">Analytics</span>
                </div>
            </a>
            <div class="nav-pill">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav-link" asp-area="" asp-controller="Sessions" asp-action="Index">Sesi</a>
                <a class="nav-link" asp-area="" asp-controller="PlayerDirectory" asp-action="Index">Pemain</a>
                <a class="nav-link" asp-area="" asp-controller="Analytics" asp-action="Index">Analitika</a>
                <a class="nav-link" asp-area="" asp-controller="Rulesets" asp-action="Index">Ruleset</a>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </nav>
    </header>
    <div class="page-shell">
        <main id="content" role="main" class="space-y-6">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-white/70">
        <div class="footer-shell">
            <span>&copy; 2026 - Cashflowpoly</span>
            <a class="hover:text-slate-700" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
