@using Cashflowpoly.Ui.Models
@using Microsoft.AspNetCore.Http
@{
    var activeRole = Context.Session.GetString(AuthConstants.SessionRoleKey);
    var activeDisplayName = Context.Session.GetString(AuthConstants.SessionDisplayNameKey);
    var activeUsername = Context.Session.GetString(AuthConstants.SessionUsernameKey);
    var activeToken = Context.Session.GetString(AuthConstants.SessionAccessTokenKey);
    var isLoggedIn = !string.IsNullOrWhiteSpace(activeRole) && !string.IsNullOrWhiteSpace(activeToken);
    var isInstructor = Context.Session.IsInstructor();
    var roleThemeClass = isLoggedIn
        ? (isInstructor ? "role-instructor" : "role-player")
        : "role-guest";
    var returnUrl = $"{Context.Request.Path}{Context.Request.QueryString}";
    var activeLanguage = UiText.NormalizeLanguage(Context.Session.GetString(AuthConstants.SessionLanguageKey));
    var isEnglish = string.Equals(activeLanguage, AuthConstants.LanguageEn, StringComparison.OrdinalIgnoreCase);
    var languageCode = isEnglish ? "EN" : "ID";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty;
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? string.Empty;
    var isAuthPage = string.Equals(currentController, "Auth", StringComparison.OrdinalIgnoreCase);
    var isRulebookSection = string.Equals(currentController, "Home", StringComparison.OrdinalIgnoreCase)
        && (string.Equals(currentAction, "Rulebook", StringComparison.OrdinalIgnoreCase)
            || string.Equals(currentAction, "Privacy", StringComparison.OrdinalIgnoreCase));
    var isHomeSection = string.Equals(currentController, "Home", StringComparison.OrdinalIgnoreCase)
        && !isRulebookSection;
    var isSessionsSection = string.Equals(currentController, "Sessions", StringComparison.OrdinalIgnoreCase);
    var isPlayersSection = string.Equals(currentController, "PlayerDirectory", StringComparison.OrdinalIgnoreCase)
        || string.Equals(currentController, "Players", StringComparison.OrdinalIgnoreCase);
    var isRulesetsSection = string.Equals(currentController, "Rulesets", StringComparison.OrdinalIgnoreCase);
    var isAnalyticsSection = string.Equals(currentController, "Analytics", StringComparison.OrdinalIgnoreCase);
    Func<bool, string> navClass = isActive => isActive ? "nav-link is-active" : "nav-link";
    var hideFooter = ViewData["HideFooter"] as bool? ?? false;
    var hideHeader = ViewData["HideHeader"] as bool? ?? false;
}
<!DOCTYPE html>
<html lang="@activeLanguage">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cashflowpoly</title>
    <script type="importmap"></script>
    <link rel="icon" type="image/x-icon" href="~/images/cashflowpoly-favicon.ico" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cashflowpoly.Ui.styles.css" asp-append-version="true" />
</head>
<body class="@roleThemeClass">
    <a class="skip-link" href="#content">@Context.T("layout.skip_to_content")</a>
    @if (!hideHeader)
    {
        <header class="sticky top-0 z-30 border-b border-white/60 bg-white/70 backdrop-blur">
            <nav class="nav-shell @(isLoggedIn ? "nav-shell-auth" : "nav-shell-guest") @(isAuthPage ? "nav-auth-page" : string.Empty)">
                <a class="nav-brand flex items-center gap-3 text-lg font-semibold text-slate-900" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="brand-mark" src="~/images/images.jpg" asp-append-version="true" alt="@Context.T("layout.logo_alt")" />
                    <div class="leading-tight">
                        <span class="brand-title">Cashflowpoly</span>
                    </div>
                </a>
                @if (!isAuthPage)
                {
                    <button class="nav-mobile-toggle js-nav-toggle"
                            type="button"
                            aria-expanded="false"
                            aria-controls="primary-nav-links"
                            aria-label="@Context.T("layout.toggle_nav")">
                        <span class="nav-mobile-toggle-line"></span>
                        <span class="nav-mobile-toggle-line"></span>
                        <span class="nav-mobile-toggle-line"></span>
                    </button>
                }
                @if (isLoggedIn)
                {
                    <div id="primary-nav-links" class="nav-pill nav-center">
                        <a class="@navClass(isHomeSection)" aria-current="@(isHomeSection ? "page" : null)" data-nav="home" asp-area="" asp-controller="Home" asp-action="Index">@Context.T("nav.home")</a>
                        @if (isInstructor)
                        {
                            <a class="@navClass(isSessionsSection)" aria-current="@(isSessionsSection ? "page" : null)" data-nav="sessions" asp-area="" asp-controller="Sessions" asp-action="Index">@Context.T("nav.sessions")</a>
                            <a class="@navClass(isPlayersSection)" aria-current="@(isPlayersSection ? "page" : null)" data-nav="players" asp-area="" asp-controller="PlayerDirectory" asp-action="Index">@Context.T("nav.players")</a>
                        }
                        <a class="@navClass(isRulesetsSection)" aria-current="@(isRulesetsSection ? "page" : null)" data-nav="rulesets" asp-area="" asp-controller="Rulesets" asp-action="Index">@Context.T("nav.ruleset")</a>
                        <a class="@navClass(isAnalyticsSection)" aria-current="@(isAnalyticsSection ? "page" : null)" data-nav="analytics" asp-area="" asp-controller="Analytics" asp-action="Index">@Context.T("nav.analytics")</a>
                        <a class="@navClass(isRulebookSection)" aria-current="@(isRulebookSection ? "page" : null)" data-nav="rulebook" asp-area="" asp-controller="Home" asp-action="Rulebook">@Context.T("nav.privacy")</a>
                    </div>

                    <div class="nav-pill nav-right">
                        <div class="nav-right-cluster">
                            <details class="nav-dropdown nav-dropdown-lang">
                                <summary class="nav-trigger" title="@(Context.T("lang.label"))" aria-label="@(Context.T("lang.label"))">
                                    <span>@languageCode</span>
                                    <span class="nav-caret">&#9662;</span>
                                </summary>
                                <div class="nav-menu lang-menu">
                                    <form method="post" asp-controller="Language" asp-action="Set">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="language" value="@AuthConstants.LanguageId" />
                                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                                        <button class="nav-menu-item @(isEnglish ? string.Empty : "active")" type="submit">@Context.T("lang.option.id")</button>
                                    </form>
                                    <form method="post" asp-controller="Language" asp-action="Set">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="language" value="@AuthConstants.LanguageEn" />
                                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                                        <button class="nav-menu-item @(isEnglish ? "active" : string.Empty)" type="submit">@Context.T("lang.option.en")</button>
                                    </form>
                                </div>
                            </details>

                            <details class="nav-dropdown nav-dropdown-profile">
                                <summary class="nav-avatar-trigger" title="@activeUsername" aria-label="@activeUsername">
                                    <img class="nav-avatar" src="~/images/images.jpg" asp-append-version="true" alt="@Context.T("layout.profile_alt")" />
                                </summary>
                                <div class="nav-menu profile-menu">
                                    <div class="profile-meta">
                                        <div class="profile-name">@(string.IsNullOrWhiteSpace(activeDisplayName) ? activeUsername : activeDisplayName)</div>
                                        <div class="profile-role">@Context.T("auth.username"): @activeUsername</div>
                                        <div class="profile-role">@Context.T("profile.role"): @activeRole</div>
                                    </div>
                                    <form method="post" asp-controller="Auth" asp-action="Logout">
                                        @Html.AntiForgeryToken()
                                        <button class="nav-menu-item nav-danger" type="submit">@Context.T("auth.logout")</button>
                                    </form>
                                </div>
                            </details>
                        </div>
                    </div>
                }
                else
                {
                    <div id="primary-nav-links" class="nav-pill nav-right">
                        <div class="nav-right-cluster">
                            <details class="nav-dropdown nav-dropdown-lang">
                                <summary class="nav-trigger" title="@(Context.T("lang.label"))" aria-label="@(Context.T("lang.label"))">
                                    <span>@languageCode</span>
                                    <span class="nav-caret">&#9662;</span>
                                </summary>
                                <div class="nav-menu lang-menu">
                                    <form method="post" asp-controller="Language" asp-action="Set">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="language" value="@AuthConstants.LanguageId" />
                                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                                        <button class="nav-menu-item @(isEnglish ? string.Empty : "active")" type="submit">@Context.T("lang.option.id")</button>
                                    </form>
                                    <form method="post" asp-controller="Language" asp-action="Set">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="language" value="@AuthConstants.LanguageEn" />
                                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                                        <button class="nav-menu-item @(isEnglish ? "active" : string.Empty)" type="submit">@Context.T("lang.option.en")</button>
                                    </form>
                                </div>
                            </details>
                        </div>
                    </div>
                }
            </nav>
        </header>
    }
    <div class="page-shell">
        <main id="content" role="main" class="space-y-6">
            @RenderBody()
        </main>
    </div>

    @if (!hideFooter)
    {
        <footer class="border-t border-white/70">
            <div class="footer-shell">
                <span>&copy; 2026 - Cashflowpoly</span>
                <a class="hover:text-slate-700" href="@($"{Url.Action("Rulebook", "Home")}#rulebook-copyright")">@Context.T("footer.rulebook_copyright")</a>
            </div>
        </footer>
    }
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

