<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cashflowpoly.Ui</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cashflowpoly.Ui.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="pointer-events-none fixed inset-0 -z-10">
        <div class="absolute left-8 top-24 h-40 w-40 rounded-full bg-emerald-200/40 blur-3xl"></div>
        <div class="absolute right-8 top-10 h-56 w-56 rounded-full bg-amber-200/50 blur-3xl"></div>
        <div class="absolute bottom-24 left-1/2 h-48 w-48 -translate-x-1/2 rounded-full bg-sky-200/40 blur-3xl"></div>
    </div>
    <header class="sticky top-0 z-20 border-b border-white/40 bg-white/70 backdrop-blur">
        <nav class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
            <a class="flex items-center gap-3 text-lg font-semibold text-slate-900" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="flex h-10 w-10 items-center justify-center rounded-2xl bg-slate-900 text-white">CF</span>
                <span class="tracking-wide">Cashflowpoly</span>
            </a>
            <div class="hidden items-center gap-5 text-sm font-semibold text-slate-700 md:flex">
                <a class="transition hover:text-slate-900" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="transition hover:text-slate-900" asp-area="" asp-controller="Sessions" asp-action="Index">Sesi</a>
                <a class="transition hover:text-slate-900" asp-area="" asp-controller="PlayerDirectory" asp-action="Index">Pemain</a>
                <a class="transition hover:text-slate-900" asp-area="" asp-controller="Analytics" asp-action="Index">Analitika</a>
                <a class="transition hover:text-slate-900" asp-area="" asp-controller="Rulesets" asp-action="Index">Ruleset</a>
                <a class="transition hover:text-slate-900" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </nav>
    </header>
    <div class="mx-auto max-w-6xl px-4 py-8">
        <main role="main" class="space-y-6">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-white/60 py-6 text-sm text-slate-500">
        <div class="mx-auto flex max-w-6xl items-center justify-between px-4">
            <span>&copy; 2026 - Cashflowpoly</span>
            <a class="hover:text-slate-700" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
