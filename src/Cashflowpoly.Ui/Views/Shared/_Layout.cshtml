<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cashflowpoly.Ui</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cashflowpoly.Ui.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="border-b border-slate-200 bg-white/90 backdrop-blur">
            <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3">
                <a class="text-lg font-semibold text-slate-900" asp-area="" asp-controller="Home" asp-action="Index">Cashflowpoly</a>
                <div class="flex items-center gap-4 text-sm">
                    <a class="text-slate-700 hover:text-slate-900" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="text-slate-700 hover:text-slate-900" asp-area="" asp-controller="Analytics" asp-action="Index">Analitika</a>
                    <a class="text-slate-700 hover:text-slate-900" asp-area="" asp-controller="Rulesets" asp-action="Index">Ruleset</a>
                    <a class="text-slate-700 hover:text-slate-900" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="mx-auto max-w-6xl px-4 py-6">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-slate-200 py-6 text-sm text-slate-500">
        <div class="mx-auto flex max-w-6xl items-center justify-between px-4">
            <span>&copy; 2026 - Cashflowpoly</span>
            <a class="hover:text-slate-700" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
