@using System.Text.Json
@model Cashflowpoly.Ui.Models.PlayerDetailViewModel

@{
    ViewData["Title"] = Context.T("players.detail_title");

    static JsonElement? TryGetPath(JsonElement? root, params string[] path)
    {
        if (!root.HasValue)
        {
            return null;
        }

        var current = root.Value;
        foreach (var key in path)
        {
            if (current.ValueKind != JsonValueKind.Object || !current.TryGetProperty(key, out var next))
            {
                return null;
            }

            current = next;
        }

        return current;
    }

    static double? TryGetNumber(JsonElement? root, params string[] path)
    {
        var element = TryGetPath(root, path);
        if (!element.HasValue || element.Value.ValueKind != JsonValueKind.Number)
        {
            return null;
        }

        return element.Value.GetDouble();
    }

    static bool? TryGetBool(JsonElement? root, params string[] path)
    {
        var element = TryGetPath(root, path);
        if (!element.HasValue || (element.Value.ValueKind != JsonValueKind.True && element.Value.ValueKind != JsonValueKind.False))
        {
            return null;
        }

        return element.Value.GetBoolean();
    }

    static string FormatNumber(double? value, string format = "0.##")
    {
        return value.HasValue ? value.Value.ToString(format) : "N/A";
    }

    static string FormatBool(bool? value)
    {
        if (!value.HasValue)
        {
            return "N/A";
        }

        return value.Value ? "Yes" : "No";
    }

    var netWorthIndex = TryGetNumber(Model.GameplayDerived, "net_worth_index");
    var incomeDiversificationRatio = TryGetNumber(Model.GameplayDerived, "income_diversification_ratio");
    var expenseEfficiency = TryGetNumber(Model.GameplayDerived, "expense_management_efficiency");
    var businessProfitMargin = TryGetNumber(Model.GameplayDerived, "business_profit_margin");
    var riskAppetite = TryGetNumber(Model.GameplayDerived, "risk_appetite_score_normalized");
    var debtLeverageRatio = TryGetNumber(Model.GameplayDerived, "debt_leverage_ratio");
    var goalSettingAmbition = TryGetNumber(Model.GameplayDerived, "goal_setting_ambition");
    var mealOrderSuccessRate = TryGetNumber(Model.GameplayDerived, "meal_order_success_rate");
    var planningHorizonPercent = TryGetNumber(Model.GameplayDerived, "planning_horizon_percent");
    var growthPatternRatio = TryGetNumber(Model.GameplayDerived, "growth_pattern_ratio");
    var donationAggressivenessPercent = TryGetNumber(Model.GameplayDerived, "donation_aggressiveness_percent");
    var donationStabilityStdDev = TryGetNumber(Model.GameplayDerived, "donation_stability_std_deviation");

    var basicProfile = TryGetBool(Model.GameplayRaw, "needs", "need_profile", "basic_profile");
    var collectorProfile = TryGetBool(Model.GameplayRaw, "needs", "need_profile", "collector_profile");
    var specialistProfile = TryGetBool(Model.GameplayRaw, "needs", "need_profile", "specialist_profile");
}

<section class="section-shell">
    <div>
        <p class="eyebrow text-emerald-700">@Context.T("players.analytics_title")</p>
        <h1 class="headline">@Context.T("players.detail_title")</h1>
        <p class="mt-2 text-xs text-slate-500 font-mono">@Model.PlayerId</p>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="mt-4 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.Summary is not null)
    {
        <div class="mt-6 grid gap-4 md:grid-cols-4">
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.cash_in")</p>
                <p class="mt-2 text-xl font-semibold text-emerald-700">@Model.Summary.CashInTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.cash_out")</p>
                <p class="mt-2 text-xl font-semibold text-rose-700">@Model.Summary.CashOutTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.donation")</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.DonationTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.gold_qty")</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.GoldQty</p>
            </div>
        </div>

        <div class="mt-6 grid gap-4 md:grid-cols-4">
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.happiness")</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.HappinessPointsTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.need_points")</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.NeedPointsTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.need_bonus")</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.NeedSetBonusPoints</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.donation_points")</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.DonationPointsTotal</p>
            </div>
        </div>

        <div class="mt-6 grid gap-4 md:grid-cols-4">
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.gold_points")</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.GoldPointsTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.pension_points")</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.PensionPointsTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.saving_goal")</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.SavingGoalPointsTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.loan_unpaid")</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@((Model.Summary.HasUnpaidLoan) ? Context.T("state.true") : Context.T("state.false"))</p>
            </div>
        </div>

        <div class="mt-6 grid gap-4 md:grid-cols-2">
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.mission_penalty")</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.MissionPenaltyTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.loan_penalty")</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.LoanPenaltyTotal</p>
            </div>
        </div>
    }

    <div class="mt-8 table-wrap">
        <table class="w-full text-left text-sm">
            <thead class="table-head">
                <tr>
                    <th class="px-4 py-3">@Context.T("common.time")</th>
                    <th class="px-4 py-3">@Context.T("common.direction")</th>
                    <th class="px-4 py-3 text-right">@Context.T("common.transaction_amount")</th>
                    <th class="px-4 py-3">@Context.T("common.category")</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Transactions.Count == 0)
            {
                <tr>
                    <td class="px-4 py-4 text-slate-500" colspan="4">@Context.T("players.no_transactions")</td>
                </tr>
            }
            else
            {
                foreach (var item in Model.Transactions)
                {
                    <tr class="border-t border-slate-200">
                        <td class="px-4 py-3 text-slate-600">@item.Timestamp.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="px-4 py-3 text-slate-600">@item.Direction</td>
                        <td class="px-4 py-3 text-right">@item.Amount</td>
                        <td class="px-4 py-3 text-slate-600">@item.Category</td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>

    <div class="mt-8">
        <div class="flex flex-col gap-2 md:flex-row md:items-end md:justify-between">
            <div>
                <p class="eyebrow">Gameplay Metrics</p>
                <h2 class="headline text-2xl">@Context.T("gameplay.title")</h2>
                @if (Model.GameplayComputedAt.HasValue)
                {
                    <p class="mt-1 text-xs text-slate-500">@Context.T("common.computed"): @Model.GameplayComputedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                }
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.GameplayErrorMessage))
        {
            <div class="mt-4 rounded-lg border border-amber-200 bg-amber-50 px-4 py-3 text-sm text-amber-700">
                @Model.GameplayErrorMessage
            </div>
        }

        @if (Model.GameplayDerived.HasValue || Model.GameplayRaw.HasValue)
        {
            <div class="mt-6 grid gap-4 md:grid-cols-3">
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Net Worth Index</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatNumber(netWorthIndex)%</p>
                </div>
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Income Diversification</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatNumber(incomeDiversificationRatio)%</p>
                </div>
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Expense Efficiency</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatNumber(expenseEfficiency)%</p>
                </div>
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Business Profit Margin</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatNumber(businessProfitMargin)%</p>
                </div>
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Risk Appetite (0-100)</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatNumber(riskAppetite)</p>
                </div>
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Debt Leverage</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatNumber(debtLeverageRatio)%</p>
                </div>
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Goal Setting Ambition</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatNumber(goalSettingAmbition)%</p>
                </div>
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Meal Order Success</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatNumber(mealOrderSuccessRate)%</p>
                </div>
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Planning Horizon</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatNumber(planningHorizonPercent)%</p>
                </div>
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Growth Pattern Ratio</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatNumber(growthPatternRatio)</p>
                </div>
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Donation Aggressiveness</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatNumber(donationAggressivenessPercent)%</p>
                </div>
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Donation Stability (StdDev)</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatNumber(donationStabilityStdDev)</p>
                </div>
            </div>

            <div class="mt-4 grid gap-4 md:grid-cols-3">
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Basic Need Profile</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatBool(basicProfile)</p>
                </div>
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Collector Need Profile</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatBool(collectorProfile)</p>
                </div>
                <div class="stat-card">
                    <p class="text-xs uppercase text-slate-500">Specialist Need Profile</p>
                    <p class="mt-2 text-xl font-semibold text-slate-900">@FormatBool(specialistProfile)</p>
                </div>
            </div>
        }

        <div class="mt-6 grid gap-4 lg:grid-cols-2">
            <div class="glass-surface p-4">
                <p class="text-xs uppercase text-slate-500">@Context.T("gameplay.raw")</p>
                <pre class="mt-3 max-h-96 overflow-auto rounded-2xl border border-slate-200 bg-slate-50 p-3 text-xs text-slate-700">@(
                    Model.GameplayRaw.HasValue
                        ? JsonSerializer.Serialize(Model.GameplayRaw.Value, new JsonSerializerOptions { WriteIndented = true })
                        : "{ }"
                )</pre>
            </div>
            <div class="glass-surface p-4">
                <p class="text-xs uppercase text-slate-500">@Context.T("gameplay.derived")</p>
                <pre class="mt-3 max-h-96 overflow-auto rounded-2xl border border-slate-200 bg-slate-50 p-3 text-xs text-slate-700">@(
                    Model.GameplayDerived.HasValue
                        ? JsonSerializer.Serialize(Model.GameplayDerived.Value, new JsonSerializerOptions { WriteIndented = true })
                        : "{ }"
                )</pre>
            </div>
        </div>
    </div>
</section>
