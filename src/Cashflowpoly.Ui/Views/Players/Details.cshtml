@model Cashflowpoly.Ui.Models.PlayerDetailViewModel

@{
    ViewData["Title"] = "Detail Pemain";
}

<section class="section-shell">
    <div>
        <p class="eyebrow text-emerald-700">Analitika Pemain</p>
        <h1 class="headline">Detail pemain</h1>
        <p class="mt-2 text-xs text-slate-500 font-mono">@Model.PlayerId</p>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="mt-4 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.Summary is not null)
    {
        <div class="mt-6 grid gap-4 md:grid-cols-4">
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Cash In</p>
                <p class="mt-2 text-xl font-semibold text-emerald-700">@Model.Summary.CashInTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Cash Out</p>
                <p class="mt-2 text-xl font-semibold text-rose-700">@Model.Summary.CashOutTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Donation</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.DonationTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Gold Qty</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.GoldQty</p>
            </div>
        </div>

        <div class="mt-6 grid gap-4 md:grid-cols-4">
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Happiness</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.HappinessPointsTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Need Points</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.NeedPointsTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Need Bonus</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.NeedSetBonusPoints</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Donation Points</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.DonationPointsTotal</p>
            </div>
        </div>

        <div class="mt-6 grid gap-4 md:grid-cols-4">
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Gold Points</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.GoldPointsTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Pension Points</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.PensionPointsTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Saving Goal</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.SavingGoalPointsTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Loan Unpaid</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@((Model.Summary.HasUnpaidLoan) ? "Ya" : "Tidak")</p>
            </div>
        </div>

        <div class="mt-6 grid gap-4 md:grid-cols-2">
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Mission Penalty</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.MissionPenaltyTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Loan Penalty</p>
                <p class="mt-2 text-xl font-semibold text-slate-900">@Model.Summary.LoanPenaltyTotal</p>
            </div>
        </div>
    }

    <div class="mt-8 table-wrap">
        <table class="w-full text-left text-sm">
            <thead class="table-head">
                <tr>
                    <th class="px-4 py-3">Waktu</th>
                    <th class="px-4 py-3">Arah</th>
                    <th class="px-4 py-3 text-right">Nominal</th>
                    <th class="px-4 py-3">Kategori</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Transactions.Count == 0)
            {
                <tr>
                    <td class="px-4 py-4 text-slate-500" colspan="4">Belum ada transaksi.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model.Transactions)
                {
                    <tr class="border-t border-slate-200">
                        <td class="px-4 py-3 text-slate-600">@item.Timestamp.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="px-4 py-3 text-slate-600">@item.Direction</td>
                        <td class="px-4 py-3 text-right">@item.Amount</td>
                        <td class="px-4 py-3 text-slate-600">@item.Category</td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</section>
