@using System.Text.Json
@model Cashflowpoly.Ui.Models.PlayerDetailViewModel

@{
    ViewData["Title"] = Context.T("players.detail_title");

    static JsonElement? TryGetPath(JsonElement? root, params string[] path)
    {
        if (!root.HasValue)
        {
            return null;
        }

        var current = root.Value;
        foreach (var key in path)
        {
            if (current.ValueKind != JsonValueKind.Object || !current.TryGetProperty(key, out var next))
            {
                return null;
            }

            current = next;
        }

        return current;
    }

    static double? TryGetNumber(JsonElement? root, params string[] path)
    {
        var element = TryGetPath(root, path);
        if (!element.HasValue || element.Value.ValueKind != JsonValueKind.Number)
        {
            return null;
        }

        return element.Value.GetDouble();
    }

    static int? TryGetInt(JsonElement? root, params string[] path)
    {
        var element = TryGetPath(root, path);
        if (!element.HasValue || element.Value.ValueKind != JsonValueKind.Number)
        {
            return null;
        }

        if (element.Value.TryGetInt32(out var intValue))
        {
            return intValue;
        }

        return (int)Math.Round(element.Value.GetDouble());
    }

    static bool? TryGetBool(JsonElement? root, params string[] path)
    {
        var element = TryGetPath(root, path);
        if (!element.HasValue || (element.Value.ValueKind != JsonValueKind.True && element.Value.ValueKind != JsonValueKind.False))
        {
            return null;
        }

        return element.Value.GetBoolean();
    }

    string FormatNumber(double? value, string format = "0.##")
    {
        return value.HasValue ? value.Value.ToString(format) : Context.T("common.na");
    }

    var netWorthIndex = TryGetNumber(Model.GameplayDerived, "net_worth_index");
    var incomeDiversificationRatio = TryGetNumber(Model.GameplayDerived, "income_diversification_ratio");
    var expenseEfficiency = TryGetNumber(Model.GameplayDerived, "expense_management_efficiency");
    var businessProfitMargin = TryGetNumber(Model.GameplayDerived, "business_profit_margin");
    var riskAppetite = TryGetNumber(Model.GameplayDerived, "risk_appetite_score_normalized");
    var debtLeverageRatio = TryGetNumber(Model.GameplayDerived, "debt_leverage_ratio");
    var goalSettingAmbition = TryGetNumber(Model.GameplayDerived, "goal_setting_ambition");
    var mealOrderSuccessRate = TryGetNumber(Model.GameplayDerived, "meal_order_success_rate");
    var planningHorizonPercent = TryGetNumber(Model.GameplayDerived, "planning_horizon_percent");
    var growthPatternRatio = TryGetNumber(Model.GameplayDerived, "growth_pattern_ratio");
    var donationAggressivenessPercent = TryGetNumber(Model.GameplayDerived, "donation_aggressiveness_percent");
    var donationStabilityStdDev = TryGetNumber(Model.GameplayDerived, "donation_stability_std_deviation");
    var actionEfficiencyPercent = TryGetNumber(Model.GameplayDerived, "action_efficiency_percent");
    var businessEfficiencyRatio = TryGetNumber(Model.GameplayDerived, "business_efficiency_ratio");
    var goldRoiPercent = TryGetNumber(Model.GameplayDerived, "gold_roi_percentage");
    var riskExposurePercent = TryGetNumber(Model.GameplayDerived, "risk_exposure_percentage");
    var riskMitigationEffectiveness = TryGetNumber(Model.GameplayDerived, "risk_mitigation_effectiveness");
    var loanRepaymentDiscipline = TryGetNumber(Model.GameplayDerived, "loan_repayment_discipline");
    var debtRatio = TryGetNumber(Model.GameplayDerived, "debt_ratio");
    var donationCommitmentScore = TryGetNumber(Model.GameplayDerived, "donation_commitment_score");
    var fulfillmentDiversity = TryGetNumber(Model.GameplayDerived, "fulfillment_diversity");
    var missionAchievement = TryGetNumber(Model.GameplayDerived, "mission_achievement");

    var startingCoins = TryGetNumber(Model.GameplayRaw, "coins", "starting_coins");
    var coinsHeldCurrent = TryGetNumber(Model.GameplayRaw, "coins", "coins_held_current");
    var coinsDonated = TryGetNumber(Model.GameplayRaw, "coins", "coins_donated");
    var coinsSaved = TryGetNumber(Model.GameplayRaw, "coins", "coins_saved");
    var coinsNetEndGame = TryGetNumber(Model.GameplayRaw, "coins", "coins_net_end_game");
    var ingredientsCollected = TryGetInt(Model.GameplayRaw, "ingredients", "ingredients_collected");
    var ingredientsHeldCurrent = TryGetInt(Model.GameplayRaw, "ingredients", "ingredients_held_current");
    var ingredientsWasted = TryGetInt(Model.GameplayRaw, "ingredients", "ingredients_wasted");
    var mealOrdersClaimed = TryGetInt(Model.GameplayRaw, "meal_orders", "meal_orders_claimed");
    var mealOrdersPassed = TryGetInt(Model.GameplayRaw, "meal_orders", "meal_orders_available_passed");
    var mealOrderIncomeTotal = TryGetNumber(Model.GameplayRaw, "meal_orders", "meal_order_income_total");
    var needCardsPurchased = TryGetInt(Model.GameplayRaw, "needs", "need_cards_purchased");
    var primaryNeedsOwned = TryGetInt(Model.GameplayRaw, "needs", "primary_needs_owned");
    var secondaryNeedsOwned = TryGetInt(Model.GameplayRaw, "needs", "secondary_needs_owned");
    var tertiaryNeedsOwned = TryGetInt(Model.GameplayRaw, "needs", "tertiary_needs_owned");
    var goldCardsHeldEnd = TryGetInt(Model.GameplayRaw, "gold", "gold_cards_held_end");
    var loansTaken = TryGetInt(Model.GameplayRaw, "financial_goals", "sharia_loan_cards_taken");
    var loansRepaid = TryGetInt(Model.GameplayRaw, "financial_goals", "sharia_loans_repaid");
    var loansUnpaidEnd = TryGetInt(Model.GameplayRaw, "financial_goals", "sharia_loans_unpaid_end");
    var actionsSkipped = TryGetInt(Model.GameplayRaw, "actions", "actions_skipped");
    var collectionMissionComplete = TryGetBool(Model.GameplayRaw, "needs", "collection_mission_complete");

    var basicProfile = TryGetBool(Model.GameplayRaw, "needs", "need_profile", "basic_profile");
    var collectorProfile = TryGetBool(Model.GameplayRaw, "needs", "need_profile", "collector_profile");
    var specialistProfile = TryGetBool(Model.GameplayRaw, "needs", "need_profile", "specialist_profile");

    var netCashflow = Model.Summary is null ? 0 : (Model.Summary.CashInTotal - Model.Summary.CashOutTotal);
}

<section class="section-shell">
    <div>
        <p class="eyebrow text-emerald-700">@Context.T("players.analytics_title")</p>
        <h1 class="headline">@Context.T("players.detail_title")</h1>
        @if (!string.IsNullOrWhiteSpace(Model.PlayerDisplayName))
        {
            <p class="mt-2 text-base font-semibold text-slate-700">@Model.PlayerDisplayName</p>
        }
        <p class="mt-2 text-xs text-slate-500 font-mono">@Model.PlayerId</p>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="mt-4 alert alert-error" aria-live="polite">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.Summary is not null)
    {
        <div class="mt-6 player-kpi-grid">
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.cash_in")</p>
                <p class="mt-2 text-2xl font-semibold text-emerald-700">@Model.Summary.CashInTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.cash_out")</p>
                <p class="mt-2 text-2xl font-semibold text-rose-700">@Model.Summary.CashOutTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.net_cashflow")</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">@netCashflow</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">@Context.T("metric.happiness")</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.Summary.HappinessPointsTotal</p>
            </div>
        </div>

        <div class="mt-6 metric-panels">
            <article class="metric-panel">
                <h3>@Context.T("players.economy_snapshot")</h3>
                <div class="metric-list">
                    <div class="metric-row"><span class="metric-key">@Context.T("metric.donation")</span><span class="metric-value">@Model.Summary.DonationTotal</span></div>
                    <div class="metric-row"><span class="metric-key">@Context.T("metric.gold_qty")</span><span class="metric-value">@Model.Summary.GoldQty</span></div>
                    <div class="metric-row"><span class="metric-key">@Context.T("metric.saving_goal")</span><span class="metric-value">@Model.Summary.SavingGoalPointsTotal</span></div>
                    <div class="metric-row"><span class="metric-key">@Context.T("metric.pension_points")</span><span class="metric-value">@Model.Summary.PensionPointsTotal</span></div>
                </div>
            </article>

            <article class="metric-panel">
                <h3>@Context.T("players.mission_risk")</h3>
                <div class="metric-list">
                    <div class="metric-row"><span class="metric-key">@Context.T("metric.mission_penalty")</span><span class="metric-value">@Model.Summary.MissionPenaltyTotal</span></div>
                    <div class="metric-row"><span class="metric-key">@Context.T("metric.loan_penalty")</span><span class="metric-value">@Model.Summary.LoanPenaltyTotal</span></div>
                    <div class="metric-row"><span class="metric-key">@Context.T("metric.loan_unpaid")</span><span class="metric-value">@((Model.Summary.HasUnpaidLoan) ? Context.T("state.true") : Context.T("state.false"))</span></div>
                    <div class="metric-row"><span class="metric-key">@Context.T("metric.need_points")</span><span class="metric-value">@Model.Summary.NeedPointsTotal</span></div>
                </div>
            </article>

            <article class="metric-panel">
                <h3>@Context.T("analytics.chart.operations")</h3>
                <div class="metric-list">
                    <div class="metric-row"><span class="metric-key">@Context.T("metric.orders_completed")</span><span class="metric-value">@Model.Summary.OrdersCompletedCount</span></div>
                    <div class="metric-row"><span class="metric-key">@Context.T("metric.inventory_ingredient")</span><span class="metric-value">@Model.Summary.InventoryIngredientTotal</span></div>
                    <div class="metric-row"><span class="metric-key">@Context.T("metric.actions_used")</span><span class="metric-value">@Model.Summary.ActionsUsedTotal</span></div>
                    <div class="metric-row"><span class="metric-key">@Context.T("metric.primary_need_compliance")</span><span class="metric-value">@FormatNumber(Model.Summary.CompliancePrimaryNeedRate * 100)%</span></div>
                    <div class="metric-row"><span class="metric-key">@Context.T("metric.violations")</span><span class="metric-value">@Model.Summary.RulesViolationsCount</span></div>
                </div>
            </article>
        </div>
    }

    <details class="mt-8 data-toggle" open>
        <summary>@Context.T("players.transaction_history") (@Model.Transactions.Count)</summary>
        <div class="mt-3 table-wrap">
            <table class="w-full text-left text-sm">
                <thead class="table-head">
                    <tr>
                        <th class="px-4 py-3">@Context.T("common.time")</th>
                        <th class="px-4 py-3">@Context.T("common.direction")</th>
                        <th class="px-4 py-3 text-right">@Context.T("common.transaction_amount")</th>
                        <th class="px-4 py-3">@Context.T("common.category")</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Transactions.Count == 0)
                {
                    <tr>
                        <td class="px-4 py-4 text-slate-500" colspan="4">@Context.T("players.no_transactions")</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.Transactions)
                    {
                        <tr class="border-t border-slate-200">
                            <td class="px-4 py-3 text-slate-600">@item.Timestamp.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="px-4 py-3 text-slate-600">@item.Direction</td>
                            <td class="px-4 py-3 text-right">@item.Amount</td>
                            <td class="px-4 py-3 text-slate-600">@item.Category</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </details>

    <div class="mt-8">
        <div class="page-intro">
            <div class="page-intro-main">
                <p class="eyebrow">@Context.T("players.gameplay_metrics")</p>
                <h2 class="headline text-2xl">@Context.T("gameplay.title")</h2>
                @if (Model.GameplayComputedAt.HasValue)
                {
                    <p class="mt-1 text-xs text-slate-500">@Context.T("common.computed"): @Model.GameplayComputedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                }
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.GameplayErrorMessage))
        {
            <div class="mt-4 alert alert-warning" aria-live="polite">
                @Model.GameplayErrorMessage
            </div>
        }

        @if (Model.GameplayDerived.HasValue || Model.GameplayRaw.HasValue)
        {
            <div class="mt-6 metric-panels metric-panels-wide">
                <article class="metric-panel">
                    <h3>@Context.T("players.financial_performance")</h3>
                    <div class="metric-list">
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.net_worth_index")</span><span class="metric-value">@FormatNumber(netWorthIndex)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.income_diversification")</span><span class="metric-value">@FormatNumber(incomeDiversificationRatio)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.expense_efficiency")</span><span class="metric-value">@FormatNumber(expenseEfficiency)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.business_profit_margin")</span><span class="metric-value">@FormatNumber(businessProfitMargin)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.growth_pattern_ratio")</span><span class="metric-value">@FormatNumber(growthPatternRatio)</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.business_efficiency_ratio")</span><span class="metric-value">@FormatNumber(businessEfficiencyRatio)</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.gold_roi")</span><span class="metric-value">@FormatNumber(goldRoiPercent)%</span></div>
                    </div>
                </article>

                <article class="metric-panel">
                    <h3>@Context.T("players.strategy_execution")</h3>
                    <div class="metric-list">
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.risk_appetite")</span><span class="metric-value">@FormatNumber(riskAppetite)</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.debt_leverage")</span><span class="metric-value">@FormatNumber(debtLeverageRatio)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.goal_setting_ambition")</span><span class="metric-value">@FormatNumber(goalSettingAmbition)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.meal_order_success")</span><span class="metric-value">@FormatNumber(mealOrderSuccessRate)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.action_efficiency")</span><span class="metric-value">@FormatNumber(actionEfficiencyPercent)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.planning_horizon")</span><span class="metric-value">@FormatNumber(planningHorizonPercent)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.mission_achievement")</span><span class="metric-value">@FormatNumber(missionAchievement)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.fulfillment_diversity")</span><span class="metric-value">@FormatNumber(fulfillmentDiversity)</span></div>
                    </div>
                </article>

                <article class="metric-panel">
                    <h3>@Context.T("players.behavior_signals")</h3>
                    <div class="metric-list">
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.donation_aggressiveness")</span><span class="metric-value">@FormatNumber(donationAggressivenessPercent)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.donation_stability")</span><span class="metric-value">@FormatNumber(donationStabilityStdDev)</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.donation_commitment")</span><span class="metric-value">@FormatNumber(donationCommitmentScore)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.debt_ratio")</span><span class="metric-value">@FormatNumber(debtRatio)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.risk_exposure")</span><span class="metric-value">@FormatNumber(riskExposurePercent)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.risk_mitigation")</span><span class="metric-value">@FormatNumber(riskMitigationEffectiveness)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.loan_repayment_discipline")</span><span class="metric-value">@FormatNumber(loanRepaymentDiscipline)%</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.basic_need_profile")</span><span class="metric-value">@(basicProfile.HasValue ? (basicProfile.Value ? Context.T("state.true") : Context.T("state.false")) : Context.T("common.na"))</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.collector_need_profile")</span><span class="metric-value">@(collectorProfile.HasValue ? (collectorProfile.Value ? Context.T("state.true") : Context.T("state.false")) : Context.T("common.na"))</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.metric.specialist_need_profile")</span><span class="metric-value">@(specialistProfile.HasValue ? (specialistProfile.Value ? Context.T("state.true") : Context.T("state.false")) : Context.T("common.na"))</span></div>
                    </div>
                </article>
            </div>

            <div class="mt-6 metric-panels metric-panels-wide">
                <article class="metric-panel">
                    <h3>@Context.T("gameplay.raw"): @Context.T("players.raw.economy")</h3>
                    <div class="metric-list">
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.starting_coins")</span><span class="metric-value">@FormatNumber(startingCoins)</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.coins_held_current")</span><span class="metric-value">@FormatNumber(coinsHeldCurrent)</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.coins_saved")</span><span class="metric-value">@FormatNumber(coinsSaved)</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.coins_donated")</span><span class="metric-value">@FormatNumber(coinsDonated)</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.coins_net_end")</span><span class="metric-value">@FormatNumber(coinsNetEndGame)</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.meal_order_income_total")</span><span class="metric-value">@FormatNumber(mealOrderIncomeTotal)</span></div>
                    </div>
                </article>

                <article class="metric-panel">
                    <h3>@Context.T("gameplay.raw"): @Context.T("players.raw.activity")</h3>
                    <div class="metric-list">
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.ingredients_collected")</span><span class="metric-value">@(ingredientsCollected?.ToString() ?? Context.T("common.na"))</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.ingredients_held_current")</span><span class="metric-value">@(ingredientsHeldCurrent?.ToString() ?? Context.T("common.na"))</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.ingredients_wasted")</span><span class="metric-value">@(ingredientsWasted?.ToString() ?? Context.T("common.na"))</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.meal_orders_claimed")</span><span class="metric-value">@(mealOrdersClaimed?.ToString() ?? Context.T("common.na"))</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.meal_orders_passed")</span><span class="metric-value">@(mealOrdersPassed?.ToString() ?? Context.T("common.na"))</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.need_cards_purchased")</span><span class="metric-value">@(needCardsPurchased?.ToString() ?? Context.T("common.na"))</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.needs_breakdown")</span><span class="metric-value">@(primaryNeedsOwned?.ToString() ?? "-") / @(secondaryNeedsOwned?.ToString() ?? "-") / @(tertiaryNeedsOwned?.ToString() ?? "-")</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.gold_cards_held_end")</span><span class="metric-value">@(goldCardsHeldEnd?.ToString() ?? Context.T("common.na"))</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.actions_skipped")</span><span class="metric-value">@(actionsSkipped?.ToString() ?? Context.T("common.na"))</span></div>
                    </div>
                </article>

                <article class="metric-panel">
                    <h3>@Context.T("gameplay.raw"): @Context.T("players.raw.commitment")</h3>
                    <div class="metric-list">
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.loans_taken")</span><span class="metric-value">@(loansTaken?.ToString() ?? Context.T("common.na"))</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.loans_repaid")</span><span class="metric-value">@(loansRepaid?.ToString() ?? Context.T("common.na"))</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.loans_unpaid_end")</span><span class="metric-value">@(loansUnpaidEnd?.ToString() ?? Context.T("common.na"))</span></div>
                        <div class="metric-row"><span class="metric-key">@Context.T("players.raw.collection_mission_complete")</span><span class="metric-value">@(collectionMissionComplete.HasValue ? (collectionMissionComplete.Value ? Context.T("state.true") : Context.T("state.false")) : Context.T("common.na"))</span></div>
                    </div>
                </article>
            </div>
        }
    </div>
</section>
