    var coinsDonated = TryGetNumber(Model.GameplayRaw, "coins", "coins_donated");
    var coinsSaved = TryGetNumber(Model.GameplayRaw, "coins", "coins_saved");
    var coinsNetEndGame = TryGetNumber(Model.GameplayRaw, "coins", "coins_net_end_game");
    var ingredientsCollected = TryGetInt(Model.GameplayRaw, "ingredients", "ingredients_collected");
    var ingredientsHeldCurrent = TryGetInt(Model.GameplayRaw, "ingredients", "ingredients_held_current");
    var ingredientsWasted = TryGetInt(Model.GameplayRaw, "ingredients", "ingredients_wasted");
    var mealOrdersClaimed = TryGetInt(Model.GameplayRaw, "meal_orders", "meal_orders_claimed");
    var mealOrdersPassed = TryGetInt(Model.GameplayRaw, "meal_orders", "meal_orders_available_passed");
    var mealOrderIncomeTotal = TryGetNumber(Model.GameplayRaw, "meal_orders", "meal_order_income_total");
    var needCardsPurchased = TryGetInt(Model.GameplayRaw, "needs", "need_cards_purchased");
    var primaryNeedsOwned = TryGetInt(Model.GameplayRaw, "needs", "primary_needs_owned");
    var secondaryNeedsOwned = TryGetInt(Model.GameplayRaw, "needs", "secondary_needs_owned");
    var tertiaryNeedsOwned = TryGetInt(Model.GameplayRaw, "needs", "tertiary_needs_owned");
    var goldCardsHeldEnd = TryGetInt(Model.GameplayRaw, "gold", "gold_cards_held_end");
    var loansTaken = TryGetInt(Model.GameplayRaw, "financial_goals", "sharia_loan_cards_taken");
    var loansRepaid = TryGetInt(Model.GameplayRaw, "financial_goals", "sharia_loans_repaid");
    var loansUnpaidEnd = TryGetInt(Model.GameplayRaw, "financial_goals", "sharia_loans_unpaid_end");
    var actionsSkipped = TryGetInt(Model.GameplayRaw, "actions", "actions_skipped");
    var collectionMissionComplete = TryGetBool(Model.GameplayRaw, "needs", "collection_mission_complete");

    var basicProfile = TryGetBool(Model.GameplayRaw, "needs", "need_profile", "basic_profile");
    var collectorProfile = TryGetBool(Model.GameplayRaw, "needs", "need_profile", "collector_profile");
    var specialistProfile = TryGetBool(Model.GameplayRaw, "needs", "need_profile", "specialist_profile");
    var rawGroups = BuildMetricGroups(Model.GameplayRaw);
    var derivedGroups = BuildMetricGroups(Model.GameplayDerived);
    var rawGroupMap = rawGroups.ToDictionary(item => item.GroupKey, item => item.Rows, StringComparer.OrdinalIgnoreCase);
    var derivedGroupMap = derivedGroups.ToDictionary(item => item.GroupKey, item => item.Rows, StringComparer.OrdinalIgnoreCase);

    var rawKeysEconomy = new[] { "summary", "coins", "meal_orders", "donations", "gold", "pension" };
    var rawKeysStrategy = new[] { "ingredients", "needs", "actions", "turns" };
    var rawKeysRisk = new[] { "life_risk", "financial_goals", "notes" };
    var rawMappedKeys = new HashSet<string>(rawKeysEconomy.Concat(rawKeysStrategy).Concat(rawKeysRisk), StringComparer.OrdinalIgnoreCase);
    var rawFallbackKeys = rawGroupMap.Keys.Where(key => !rawMappedKeys.Contains(key)).ToArray();

    var economyRawRows = GetGroupRows(rawGroupMap, rawKeysEconomy);
    var strategyRawRows = GetGroupRows(rawGroupMap, rawKeysStrategy);
    var riskRawRows = MergeUniqueRows(GetGroupRows(rawGroupMap, rawKeysRisk), GetGroupRows(rawGroupMap, rawFallbackKeys));

    var derivedSummaryRows = GetGroupRows(derivedGroupMap, "summary");
    var economyDerivedRows = MergeUniqueRows(
        FilterRowsByKeywords(
            derivedSummaryRows,
            "net_worth",
            "income_diversification",
            "expense_management",
            "business_profit",
            "business_efficiency",
            "gold_roi",
            "growth_pattern"),
        GetGroupRows(derivedGroupMap, "expense_management_components"));
    var strategyDerivedRows = MergeUniqueRows(
        FilterRowsByKeywords(
            derivedSummaryRows,
            "action_efficiency",
            "meal_order_success",
            "planning_horizon",
            "goal_setting_ambition",
            "mission_achievement",
            "fulfillment_diversity"));
    var riskDerivedRows = MergeUniqueRows(
        FilterRowsByKeywords(
            derivedSummaryRows,
            "risk_",
            "debt_",
            "loan_",
            "donation_commitment",
            "donation_aggressiveness",
            "donation_stability"),
        GetGroupRows(derivedGroupMap, "risk_appetite_components"),
        GetGroupRows(derivedGroupMap, "happiness_portfolio"));

    var mappedDerivedPaths = new HashSet<string>(
        economyDerivedRows
            .Concat(strategyDerivedRows)
            .Concat(riskDerivedRows)
            .Select(row => row.Path),
        StringComparer.OrdinalIgnoreCase);
    var fallbackDerivedRows = derivedSummaryRows.Where(row => !mappedDerivedPaths.Contains(row.Path)).ToList();
    if (fallbackDerivedRows.Count > 0)
    {
        riskDerivedRows = MergeUniqueRows(riskDerivedRows, fallbackDerivedRows);
    }

    var economyQuickRows = new List<(string Label, string Value)>
    {
        (Context.T("players.metric.net_worth_index"), FormatPercent(netWorthIndex)),
        (Context.T("players.metric.income_diversification"), FormatPercent(incomeDiversificationRatio)),
        (Context.T("players.metric.expense_efficiency"), FormatPercent(expenseEfficiency)),
        (Context.T("players.metric.business_profit_margin"), FormatPercent(businessProfitMargin)),
        (Context.T("players.metric.gold_roi"), FormatPercent(goldRoiPercent)),
        (Context.T("players.raw.coins_net_end"), FormatNumber(coinsNetEndGame))
    };

    var strategyQuickRows = new List<(string Label, string Value)>
    {
        (Context.T("players.metric.action_efficiency"), FormatPercent(actionEfficiencyPercent)),
        (Context.T("players.metric.meal_order_success"), FormatPercent(mealOrderSuccessRate)),
        (Context.T("players.metric.planning_horizon"), FormatPercent(planningHorizonPercent)),
        (Context.T("players.metric.goal_setting_ambition"), FormatPercent(goalSettingAmbition)),
        (Context.T("players.metric.fulfillment_diversity"), FormatNumber(fulfillmentDiversity)),
        (Context.T("metric.orders_completed"), FormatInt(mealOrdersClaimed))
    };

    var riskQuickRows = new List<(string Label, string Value)>
    {
        (Context.T("players.metric.risk_appetite"), FormatNumber(riskAppetite)),
        (Context.T("players.metric.debt_leverage"), FormatPercent(debtLeverageRatio)),
        (Context.T("players.metric.debt_ratio"), FormatPercent(debtRatio)),
        (Context.T("players.metric.risk_exposure"), FormatPercent(riskExposurePercent)),
        (Context.T("players.metric.risk_mitigation"), FormatPercent(riskMitigationEffectiveness)),
        (Context.T("players.metric.loan_repayment_discipline"), FormatPercent(loanRepaymentDiscipline))
    };

    var netCashflow = Model.Summary is null ? 0 : (Model.Summary.CashInTotal - Model.Summary.CashOutTotal);
}

