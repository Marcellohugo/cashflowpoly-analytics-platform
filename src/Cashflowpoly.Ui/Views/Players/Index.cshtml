@model Cashflowpoly.Ui.Models.PlayerDirectoryViewModel

@{
    ViewData["Title"] = Context.T("nav.players");
}

<section class="section-shell w-full">
    <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
        <div>
            <p class="eyebrow">@Context.T("players.management")</p>
            <h1 class="headline">@Context.T("players.title")</h1>
            <p class="subhead">Direktori pemain untuk identifikasi cepat sebelum masuk detail sesi.</p>
        </div>
    </div>

    <div class="mt-5 ruleset-stats">
        <div class="stat-card">
            <p class="text-xs uppercase text-slate-500">Total Players</p>
            <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.Players.Count</p>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="mt-4 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
            @Model.ErrorMessage
        </div>
    }

    <details class="mt-4 data-toggle">
        <summary>Tips penggunaan menu Pemain</summary>
        <div class="mt-3 metric-panel">
            <div class="metric-list">
                <div class="metric-row"><span class="metric-key">Validasi</span><span class="metric-value">Pastikan nama pemain sesuai data sesi.</span></div>
                <div class="metric-row"><span class="metric-key">Tracking</span><span class="metric-value">Gunakan Player ID untuk tracing event/transaction.</span></div>
                <div class="metric-row"><span class="metric-key">Analisis</span><span class="metric-value">Masuk detail sesi untuk membuka metrik pemain per sesi.</span></div>
            </div>
        </div>
    </details>

    <div class="mt-6 table-wrap">
        <table class="w-full text-left text-sm">
            <thead class="table-head">
                <tr>
                    <th class="px-4 py-3">@Context.T("common.name")</th>
                    <th class="px-4 py-3">@Context.T("common.player_id")</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Players.Count == 0)
            {
                <tr>
                    <td class="px-4 py-4 text-slate-500" colspan="2">@Context.T("state.no_players")</td>
                </tr>
            }
            else
            {
                foreach (var player in Model.Players)
                {
                    <tr class="border-t border-slate-200">
                        <td class="px-4 py-3">
                            <span class="font-medium text-slate-900">@player.DisplayName</span>
                        </td>
                        <td class="px-4 py-3 font-mono text-xs text-slate-600">@player.PlayerId</td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</section>
