@model Cashflowpoly.Ui.Models.LoginViewModel

@{
    ViewData["Title"] = Context.T("auth.title");
}

<section class="section-shell">
    <div class="mx-auto max-w-xl">
        <div>
            <p class="eyebrow text-emerald-700">@Context.T("auth.access")</p>
            <h1 class="headline">@Context.T("auth.title")</h1>
            <p class="subhead">@Context.T("auth.subtitle")</p>
        </div>

        <form class="mt-6 glass-surface p-6" method="post" asp-controller="Auth" asp-action="Login">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ReturnUrl" />

            <div>
                <label class="text-xs font-semibold uppercase tracking-wider text-slate-500">@Context.T("auth.username")</label>
                <input class="mt-2 w-full rounded-xl border border-slate-200 bg-white/80 px-4 py-3 text-sm focus:border-slate-400 focus:outline-none"
                       asp-for="Username" placeholder="instructor" />
            </div>

            <div class="mt-4">
                <label class="text-xs font-semibold uppercase tracking-wider text-slate-500">@Context.T("auth.password")</label>
                <input class="mt-2 w-full rounded-xl border border-slate-200 bg-white/80 px-4 py-3 text-sm focus:border-slate-400 focus:outline-none"
                       asp-for="Password" type="password" placeholder="********" />
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="mt-4 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
                    @Model.ErrorMessage
                </div>
            }

            <button class="btn-primary mt-6" type="submit">@Context.T("auth.submit")</button>
            <p class="mt-4 text-xs text-slate-500">@Context.T("auth.default_accounts")</p>
            <p class="mt-3 text-sm text-slate-500">
                @Context.T("auth.no_account")
                <a class="font-semibold hover:underline" asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">@Context.T("auth.register")</a>
            </p>
        </form>
    </div>
</section>
