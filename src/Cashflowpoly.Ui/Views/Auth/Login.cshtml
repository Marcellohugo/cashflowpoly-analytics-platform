@model Cashflowpoly.Ui.Models.LoginViewModel

@{
    ViewData["Title"] = Context.T("auth.title");
    ViewData["HideFooter"] = true;
}

<div class="auth-split-shell">
    <div class="auth-split-card auth-mode-login">
            <div class="auth-split-left">
                <p class="auth-kicker">@Context.T(key: "auth.access")</p>
                <h1 class="auth-heading">@Context.T(key: "auth.title")</h1>
                <p class="auth-copy">@Context.T(key: "auth.subtitle")</p>

                <form class="auth-form" method="post" asp-controller="Auth" asp-action="Login">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div>
                        <label class="auth-label">@Context.T(key: "auth.username")</label>
                        <input class="auth-input"
                               asp-for="Username" placeholder="Username" />
                    </div>

                    <div>
                        <label class="auth-label">@Context.T(key: "auth.password")</label>
                        <input class="auth-input"
                               asp-for="Password" type="password" placeholder="********" />
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
                    {
                        <div class="rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
                            @Model.ErrorMessage
                        </div>
                    }

                    <button class="auth-login-btn" type="submit">@Context.T(key: "auth.submit")</button>

                    <p class="auth-register-copy">
                        @Context.T(key: "auth.no_account")
                        <a class="js-auth-switch" data-auth-switch-direction="left" asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">@Context.T(key: "auth.register")</a>
                    </p>
                </form>

                <div class="auth-login-notes" aria-hidden="true">
                    <span>Akses sesi lebih cepat</span>
                    <span>Monitoring analytics real-time</span>
                    <span>Manajemen ruleset terpusat</span>
                </div>
            </div>

            <aside class="auth-split-right" aria-hidden="true">
                <h2>Belum Punya Akun?</h2>
                <p>Buat akun baru untuk mulai mengelola sesi dan analytics.</p>
                <a class="auth-signup-cta js-auth-switch" data-auth-switch-direction="left" asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">DAFTAR</a>
            </aside>
    </div>
</div>
