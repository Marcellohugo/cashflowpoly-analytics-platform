@model Cashflowpoly.Ui.Models.AnalyticsSearchViewModel

@{
    ViewData["Title"] = "Analitika";
}

<section class="section-shell">
    <div class="flex flex-col gap-2 md:flex-row md:items-end md:justify-between">
        <div>
            <p class="eyebrow text-emerald-700">Dashboard Analitika</p>
            <h1 class="headline">Cari analitika sesi</h1>
            <p class="subhead">Masukkan ID sesi untuk melihat ringkasan dan performa pemain.</p>
        </div>
        <div class="badge badge-emerald">Real-time snapshot</div>
    </div>

    <form class="mt-6 flex flex-col gap-3 glass-surface p-4 md:flex-row md:items-end" method="post">
        <div class="flex-1">
            <label class="text-xs font-semibold uppercase tracking-wider text-slate-500">Session ID</label>
            <input class="mt-2 w-full rounded-xl border border-slate-200 bg-white/80 px-4 py-3 text-sm focus:border-slate-400 focus:outline-none"
                   asp-for="SessionId" placeholder="UUID sesi" />
        </div>
        <button class="btn-primary"
                type="submit">Lihat Analitika</button>
    </form>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="mt-4 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.Result is not null)
    {
        <div class="mt-8 grid gap-4 md:grid-cols-5">
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Total Event</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.Result.Summary.EventCount</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Cash In</p>
                <p class="mt-2 text-2xl font-semibold text-emerald-700">@Model.Result.Summary.CashInTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Cash Out</p>
                <p class="mt-2 text-2xl font-semibold text-rose-700">@Model.Result.Summary.CashOutTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Net Cashflow</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.Result.Summary.CashflowNetTotal</p>
            </div>
            <div class="stat-card">
                <p class="text-xs uppercase text-slate-500">Pelanggaran</p>
                <p class="mt-2 text-2xl font-semibold text-slate-900">@Model.Result.Summary.RulesViolationsCount</p>
            </div>
        </div>

        <div class="mt-8 table-wrap">
            <table class="w-full text-left text-sm">
                <thead class="table-head">
                    <tr>
                        <th class="px-4 py-3">Player ID</th>
                        <th class="px-4 py-3 text-right">Cash In</th>
                        <th class="px-4 py-3 text-right">Cash Out</th>
                        <th class="px-4 py-3 text-right">Donation</th>
                        <th class="px-4 py-3 text-right">Gold Qty</th>
                        <th class="px-4 py-3 text-right">Happiness</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Result.ByPlayer.Count == 0)
                {
                    <tr>
                        <td class="px-4 py-4 text-slate-500" colspan="6">Belum ada data pemain.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.Result.ByPlayer)
                    {
                        <tr class="border-t border-slate-200">
                            <td class="px-4 py-3 font-mono text-xs text-slate-600">@item.PlayerId</td>
                            <td class="px-4 py-3 text-right">@item.CashInTotal</td>
                            <td class="px-4 py-3 text-right">@item.CashOutTotal</td>
                            <td class="px-4 py-3 text-right">@item.DonationTotal</td>
                            <td class="px-4 py-3 text-right">@item.GoldQty</td>
                            <td class="px-4 py-3 text-right">@item.HappinessPointsTotal</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    }
</section>
