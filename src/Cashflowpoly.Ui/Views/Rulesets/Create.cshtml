@model Cashflowpoly.Ui.Models.CreateRulesetViewModel

@{
    ViewData["Title"] = "Buat Ruleset";
}

<section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <div>
        <p class="text-sm font-semibold uppercase tracking-widest text-slate-500">Manajemen Ruleset</p>
        <h1 class="mt-2 text-2xl font-semibold text-slate-900">Buat Ruleset Baru</h1>
        <p class="mt-2 text-sm text-slate-600">Isi konfigurasi JSON sesuai spesifikasi ruleset.</p>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="mt-4 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
            @Model.ErrorMessage
        </div>
    }

    <form class="mt-6 space-y-4" method="post">
        <div>
            <label class="text-sm font-medium text-slate-700">Nama</label>
            <input class="mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-slate-500 focus:outline-none"
                   asp-for="Name" />
        </div>
        <div>
            <label class="text-sm font-medium text-slate-700">Deskripsi</label>
            <input class="mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:border-slate-500 focus:outline-none"
                   asp-for="Description" />
        </div>
        <div>
            <label class="text-sm font-medium text-slate-700">Config JSON</label>
            <textarea class="mt-1 h-72 w-full rounded-lg border border-slate-300 px-3 py-2 font-mono text-xs focus:border-slate-500 focus:outline-none"
                      asp-for="ConfigJson"></textarea>
        </div>
        <div class="flex items-center gap-3">
            <button class="inline-flex items-center justify-center rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800"
                    type="submit">Simpan Ruleset</button>
            <a class="text-sm text-slate-600 hover:text-slate-900" asp-controller="Rulesets" asp-action="Index">Batal</a>
        </div>
    </form>
</section>
