@model Cashflowpoly.Ui.Models.CreateRulesetViewModel

@{
    ViewData["Title"] = "Buat Ruleset";
}

<section class="section-shell">
    <div>
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Manajemen Ruleset</p>
        <h1 class="mt-3 text-3xl text-slate-900">Buat Ruleset Baru</h1>
        <p class="mt-2 text-sm text-slate-600">Isi konfigurasi JSON sesuai spesifikasi ruleset.</p>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="mt-4 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
            @Model.ErrorMessage
        </div>
    }

    <form class="mt-6 space-y-4 rounded-2xl border border-slate-200/70 bg-white/80 p-4" method="post">
        <div>
            <label class="text-xs font-semibold uppercase tracking-wider text-slate-500">Nama</label>
            <input class="mt-2 w-full rounded-xl border border-slate-200 bg-white/80 px-4 py-3 text-sm focus:border-slate-400 focus:outline-none"
                   asp-for="Name" />
        </div>
        <div>
            <label class="text-xs font-semibold uppercase tracking-wider text-slate-500">Deskripsi</label>
            <input class="mt-2 w-full rounded-xl border border-slate-200 bg-white/80 px-4 py-3 text-sm focus:border-slate-400 focus:outline-none"
                   asp-for="Description" />
        </div>
        <div>
            <label class="text-xs font-semibold uppercase tracking-wider text-slate-500">Config JSON</label>
            <textarea class="mt-2 h-72 w-full rounded-xl border border-slate-200 bg-white/80 px-4 py-3 font-mono text-xs focus:border-slate-400 focus:outline-none"
                      asp-for="ConfigJson"></textarea>
        </div>
        <div class="flex items-center gap-3">
            <button class="btn-primary"
                    type="submit">Simpan Ruleset</button>
            <a class="text-sm text-slate-600 hover:text-slate-900" asp-controller="Rulesets" asp-action="Index">Batal</a>
        </div>
    </form>
</section>
