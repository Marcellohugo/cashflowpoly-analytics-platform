@{
    ViewData["Title"] = "Home Page";
}

<section class="section-shell">
    <div class="grid gap-6 md:grid-cols-[1.2fr_0.8fr] md:items-center">
        <div>
            <p class="text-xs font-semibold uppercase tracking-[0.3em] text-emerald-700">Cashflowpoly</p>
            <h1 class="mt-3 text-4xl text-slate-900 md:text-5xl">Dasbor Analitika & Manajemen Ruleset</h1>
            <p class="mt-3 text-sm text-slate-600">
                Pantau event, proyeksi arus kas, dan ringkasan performa pemain dalam satu tampilan.
            </p>
            <div class="mt-6 flex flex-wrap gap-3">
                <a class="btn-primary" asp-controller="Sessions" asp-action="Index">Mulai dari Sesi</a>
                <a class="btn-ghost" asp-controller="Analytics" asp-action="Index">Lihat Analitika</a>
            </div>
        </div>
        <div class="rounded-2xl border border-slate-200/70 bg-white/80 p-5">
            <div class="space-y-3">
                <div class="flex items-center justify-between text-sm text-slate-600">
                    <span>Active Sessions</span>
                    <span class="rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-800">Real‑time</span>
                </div>
                <div class="text-4xl font-semibold text-slate-900">3</div>
                <div class="h-2 w-full rounded-full bg-slate-100">
                    <div class="h-2 w-2/3 rounded-full bg-emerald-500"></div>
                </div>
                <p class="text-xs text-slate-500">Snapshot singkat untuk demo tampilan.</p>
            </div>
        </div>
    </div>
</section>
